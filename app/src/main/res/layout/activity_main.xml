<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overviewBackground"
    tools:context="fhict.server.GraphAPI.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginTop="608dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/isaac_logo" />

    <TextView
        android:id="@+id/attendeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="148dp"
        android:layout_marginTop="128dp"
        android:text="Genodigden:"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appointmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="324dp"
        android:text="Geplande vergaderingen:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:width="144dp"
        android:height="41dp"
        android:lineSpacingMultiplier="1.37"
        android:style="@style/Until1415"
        android:text="until 14:15 "
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <ProgressBar
        android:id="@+id/appointmentProgressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="472dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rockwen"
        android:gravity="center_horizontal"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="821dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:width="700dp"
        android:height="136dp"
        android:fontFamily="@font/rockwen"
        android:gravity="center"
        android:lineSpacingMultiplier="1.20"
        android:style="@style/Free"
        android:text="FREE"
        android:textColor="#FFFFFF"
        android:textSize="100sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="228dp"
        android:layout_marginTop="24dp"
        android:width="92.03dp"
        android:height="47dp"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:lineSpacingMultiplier="1.34"
        android:style="@style/1300"
        android:text="13:00"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnVergadering"
        android:layout_width="226dp"
        android:layout_height="34dp"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="500dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/rockwen"
        android:onClick="btnVergaderingOnClick"
        android:text="Open vergadering"
        android:textColor="#FF009DDC"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.425" />

    <Button
        android:id="@+id/button2"
        android:layout_width="208dp"
        android:layout_height="99dp"
        android:layout_marginBottom="128dp"
        android:layout_marginRight="244dp"
        android:onClick="btnReserveer"
        android:text="Reserveren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/overview_button_bg"
        android:fontFamily="@font/rockwen"
        android:onClick="btnAltRoomOnClick"
        android:text="Alternatieve ruimtes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="212dp"
        android:layout_height="153dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="148dp"
        android:focusableInTouchMode="false"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textViewRoom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="212dp"
        android:layout_height="328dp"
        android:layout_marginLeft="796dp"
        android:layout_marginTop="348dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
