<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMain"
    android:background="@color/colorBackground">
    tools:context="fhict.server.GraphAPI.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginTop="608dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/isaac_logo" />

    <TextView
        android:id="@+id/attendeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:layout_marginTop="8dp"
        android:text="Genodigden:"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appointmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="324dp"
        android:text="Geplande vergaderingen:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOpenUntil"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:width="144dp"
        android:height="41dp"
        android:lineSpacingMultiplier="1.37"
        android:text="until 14:15 "
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

    <ProgressBar
        android:id="@+id/appointmentProgressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="464dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rockwen"

        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="821dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="204dp"
        android:width="200dp"
        android:height="90dp"
        android:fontFamily="@font/rockwen"
        android:gravity="center"
        android:lineSpacingMultiplier="1.20"
        android:text="FREE"
        android:textColor="#FFFFFF"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="252dp"
        android:layout_marginTop="16dp"
        android:width="92.03dp"
        android:height="47dp"
        android:fontFamily="sans-serif"
        android:gravity="right"
        android:lineSpacingMultiplier="1.34"
        android:text="13:00"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnVergadering"
        android:layout_width="231dp"
        android:layout_height="32dp"
        android:layout_marginRight="460dp"
        android:layout_marginTop="48dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/rockwen"
        android:onClick="btnVergaderingOnClick"
        android:text="Open vergadering"
        android:textColor="#FF009DDC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

    <Button
        android:id="@+id/button2"
        android:layout_width="56dp"
        android:layout_height="39dp"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="364dp"
        android:onClick="btnReserveer"
        android:text="Reserveren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/overview_button_bg"
        android:fontFamily="@font/rockwen"
        android:onClick="btnAltRoomOnClick"
        android:text="Alternatieve ruimtes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="229dp"
        android:layout_height="279dp"
        android:background="#FFFFFF"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:focusableInTouchMode="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendeeTitle" />

    <TextView
        android:id="@+id/tvFloor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:text="4th floor"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewRoom" />

    <TextView
        android:id="@+id/tvPersons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="4 persons"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/tvFloor"
        app:layout_constraintTop_toTopOf="@+id/textViewRoom" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/floor"
        app:layout_constraintEnd_toEndOf="@+id/tvFloor"
        app:layout_constraintTop_toTopOf="@+id/tvFloor" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="28dp"
        android:layout_height="19dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/persons"
        app:layout_constraintEnd_toEndOf="@+id/tvPersons"
        app:layout_constraintTop_toTopOf="@+id/tvPersons" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="229dp"
        android:layout_height="328dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentTitle" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/clock"
        app:layout_constraintEnd_toStartOf="@+id/tvOpenUntil"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

</android.support.constraint.ConstraintLayout>
