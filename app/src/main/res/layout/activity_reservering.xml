<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gisro.roomplannerisaac.Classes.GraphAPI.Reservering"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="83dp"
        android:layout_marginLeft="190dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="433dp"
        android:layout_height="241dp"
        android:layout_marginLeft="-283dp"
        android:layout_marginTop="-787dp"
        android:headerBackground="@color/colorMainTheme"
        android:keepScreenOn="false"
        android:numbersSelectorColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="136dp"
        android:layout_height="37dp"
        android:layout_marginRight="309dp"
        android:layout_marginTop="42dp"
        android:text="Duur vergadering (minuten):"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btBack" />

    <DatePicker
        android:id="@+id/datePicker2"
        android:layout_width="525dp"
        android:layout_height="241dp"
        android:layout_marginLeft="-369dp"
        android:layout_marginTop="-512dp"
        android:headerBackground="@color/colorMainTheme"
        app:layout_constraintLeft_toRightOf="@+id/timePicker"
        app:layout_constraintTop_toTopOf="parent"
        android:yearListSelectorColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btBack"
        android:layout_width="311dp"
        android:layout_height="74dp"
        android:layout_marginTop="258dp"
        android:onClick="btnReserveer"
        android:text="Reserveer"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.793" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="469dp"
        android:layout_height="189dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.968"
        tools:ignore="RtlHardcoded"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/numberPicker2"
        android:layout_width="49dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="246dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
