<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gisro.roomplannerisaac.Classes.GraphAPI.Reservering"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="436dp"
        android:layout_height="246dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:headerBackground="@color/colorMainTheme"
        android:keepScreenOn="false"
        android:numbersSelectorColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="311dp"
        android:layout_height="85dp"
        android:text="Toevoegen"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="50dp"
        android:id="@+id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="512dp" />

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="136dp"
        android:layout_height="37dp"
        android:text="Duur vergadering:"
        android:textSize="15dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/btBack"
        tools:layout_editor_absoluteX="719dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/textViewRoom"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/btBack" />

    <DatePicker
        android:id="@+id/datePicker2"
        android:layout_width="525dp"
        android:layout_height="241dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:headerBackground="@color/colorMainTheme"
        app:layout_constraintLeft_toRightOf="@+id/timePicker"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="447dp"
        tools:layout_editor_absoluteY="5dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="342dp"
        android:layout_height="337dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="311dp"
        android:layout_height="74dp"
        android:layout_marginTop="395dp"
        android:onClick="btnReserveer"
        android:text="Reserveer"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        tools:layout_editor_absoluteX="363dp" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="379dp"
        android:layout_height="334dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
