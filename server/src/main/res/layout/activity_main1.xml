<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginTop="624dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/isaac_logo" />

    <TextView
        android:id="@+id/tvReservedBy"
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:layout_marginTop="48dp"
        android:width="144dp"
        android:height="41dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.37"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="464dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rockwen"

        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="821dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="204dp"
        android:width="200dp"
        android:height="90dp"
        android:fontFamily="@font/rockwen"
        android:gravity="center"
        android:lineSpacingMultiplier="1.20"
        android:text="Admin"
        android:textColor="#FFFFFF"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnVergadering"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:layout_marginRight="228dp"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/rockwen"
        android:onClick="btnReservedRooms"
        android:text="Get All Reserved Rooms"
        android:textColor="#FF009DDC"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:layout_marginBottom="280dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/overview_button_bg"
        android:fontFamily="@font/rockwen"
        android:onClick="btnAllRooms"
        android:text="Get All Rooms"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btEnd"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginBottom="84dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/overview_button_bg"
        android:fontFamily="@font/rockwen"
        android:text="END"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btExtend"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/overview_button_bg"
        android:fontFamily="@font/rockwen"
        android:text="EXTEND"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
